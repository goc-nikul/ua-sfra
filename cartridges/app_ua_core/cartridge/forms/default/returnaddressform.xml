    <field formid="returnzip" 
			type="string" 
			mandatory="true" 
			max-length="50"
			missing-error="error.message.required"
			regexp="^[0-9]{5}(?:-[0-9]{4})?$"
			range-error="error.message.lessthan50"/>
			
	<field formid="returnemail" 
			type="string" 
