<input id="ajax_url" type="hidden" value="${URLUtils.url('SmartlingProduct-SendTranslate')}"/>

<script type="text/javascript">
var uploadInProgress = false;
window.onbeforeunload = function() {
    if (uploadInProgress) return 'Sending for translation is still in progress!';
};

function submit()
{
    var itemCheckbox = jQuery("[name='itemId']");
    var languageCheckbox = jQuery("[name='language']");
    var items = new Array();
    var languages = new Array();
    var languageNames = new Array();
    var ajaxUrl = document.getElementById('ajax_url').value;

    itemCheckbox.each(function(index, value) {
        if(jQuery(this).prop( "checked" )) {
            items.push(jQuery(this).val());
        }
    });

    languageCheckbox.each(function(index, value) {
        if(jQuery(this).prop( "checked" )) {
            languages.push(jQuery(this).val());
            languageNames.push(jQuery("label[for='"+jQuery(this).attr("id")+"']").text())
        }
    });

    if (languages.length === 0 || items.length === 0) {
        alert("Please select at least one product and language");
        return;
    }

    if (! window.confirm("You have selected " + items.length + " items for translation.\n" +
            "Target languages: \n   " + languageNames.join().replace(/,/g, ' ,\n   ') + ".\n" +
            "Click OK to submit for translation.")) {
        return;
    }

    jQuery("#progress-overlay").show();
    jQuery("#progress-spinner").show();
    uploadInProgress = true;

    var requestThreshold = 100;
    var chunkSize = Math.floor(requestThreshold / languages.length);


    var dfd = jQuery.Deferred();
    var promise = dfd.promise();
    var responses = [];

    function chainRequest(chunk) {
        promise = promise.then(function (response) {
            responses.push(response);
            return jQuery.ajax({
                url: ajaxUrl,
                type: 'post',
                data: {
                    'items': String(chunk),
                    'languages': String(languages)
                }
            });
        });
    }

    splitArrayIntoChunks(items, chunkSize)
        .forEach(
            function (chunk) {
                chainRequest(chunk)
            });

    dfd.resolve();

    promise
        .then(
                function (response) {
                    jQuery("#progress-overlay").hide();
                    jQuery("#progress-spinner").hide();
                    uploadInProgress = false;
                    alert('Items sent for translation. Thank you!');
                    window.location.reload(true);
                });
}

function splitArrayIntoChunks(items, chunkSize) {
    var chunks = [];
    for (var start = 0; start < items.length; start += chunkSize) {
        chunks.push(items.slice(start, start + chunkSize));
    }
    return chunks;
}

function checkAllLocales(name)
{
    var checkbox = jQuery("[name='"+name+"']");
    checkbox.each(function(index, value) {
        jQuery(this).prop("checked", true);
    });
}

function checkAll(name)
{
    var checkbox = jQuery("[name='"+name+"']");
    checkbox.each(function(index, value) {
        jQuery(this).prop("checked", true);
    });
    jQuery("#select").hide();
    jQuery("#clean").show();
}

function unCheckAll(name)
{
    var checkbox = jQuery("[name='"+name+"']");
    checkbox.each(function(index, value) {
        jQuery(this).removeAttr('checked');
    });
    jQuery("#clean").hide();
    jQuery("#select").show();
}
</script>

<isscript>
    current = pdict.CurrentHttpParameterMap.page.stringValue;
    totalCount = pdict.countProduct;
    pageURL = URLUtils.url('SmartlingProduct-SiteAction');
    maxPage = pdict.pageMax;

    lr = 5; // number of explicit page links to the left and right
    if ( maxPage <= 2*lr )
    {
        rangeBegin = 0;
        rangeEnd = maxPage;
    }
    else
    {
        rangeBegin = Math.max( Math.min( current - lr, maxPage - 2*lr ), 0 );
        rangeEnd = Math.min( rangeBegin + 2*lr, maxPage );
    }


</isscript>
<isinclude template="application/script"/>

<table class="pagecursor" width="100%" border="0" cellspacing="1" cellpadding="1">
    <tbody>
        <tr>
            <td class="pagecursortxt top" align="left" width="100%" ></td>

            <isloop status="i" begin="${rangeBegin}" end="${rangeEnd}">
                <isif condition="${(i.index < totalCount-1) && totalCount > maxPage}">
                    <isif condition="${i.index == current-1}">
                        <td class="pagecursoritem" align="right" width="1">
                            <a href="${URLUtils.url('SmartlingProduct-ShowCategory', 'category_id', pdict.category.getID(), 'page', (i.index + 1).toString())}" class="pagecursorbtn" style="border: 1px solid #ccc;"><b>[${(i.index + 1).toString()}]</b></a>
                        </td>
                    <iselse>
                        <td class="pagecursortxt" align="right" width="1">
                            <a href="${URLUtils.url('SmartlingProduct-ShowCategory', 'category_id', pdict.category.getID(), 'page', (i.index + 1).toString())}" class="pagecursorbtn" style="border: 1px solid #ccc;"><b>[${(i.index + 1).toString()}]</b></a>
                        </td>
                    </isif>
                </isif>
                <isif condition="${(totalCount-((i.index+1)*maxPage)) <= 0}">
                    <isbreak/>
                </isif>
            </isloop>
        </tr>
    </tbody>
</table>

