    <tbody>
        <tr>
            <td class="breadcrumb">
                <a class="breadcrumb" href="${URLUtils.url('ViewApplication-CompressMenuGroup', 'MenuGroupID', 'SiteMenu', 'OverviewPage', 'SiteNavigationBar-ShowSiteOverview')}">Site</a>
                &nbsp>&nbsp
                <a class="breadcrumb" href="${URLUtils.url('SiteNavigationBar-ShowMenuitemOverview', 'CurrentMenuItemId', 'smartling')}">Smartling</a>

            <isif condition="${categoryInfo.length > 0 }">
                &nbsp>&nbsp<a class="breadcrumb" href="${URLUtils.url('SmartlingProduct-ShowCategory')}">Product translation</a>
                <isloop items="${categoryInfo}" var="category" status="status">
                    <isif condition="${category.ID != 'root'}">
                        <isif condition="${status.last != true}">
                            &nbsp>&nbsp<a class="breadcrumb" href="${URLUtils.url('SmartlingProduct-ShowCategory', 'category_id', category.ID)}">${category.displayName}</a>
                        <iselse>
                            &nbsp>&nbsp${category.displayName}
                        </isif>
                    </isif>
                </isloop>
            <iselse>
                &nbsp>&nbsp Product translation
            </isif>
            </td>
        </tr>
    </tbody>
</table>
