<?xml version="1.0" encoding="UTF-8"?>
<tax xmlns="http://www.demandware.com/xml/impex/tax/2007-02-14">
    <tax-classes>
        <tax-class class-id="accessories">
            <display-name>Accessories</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="exempt">
            <display-name>Exempt</display-name>
            <description>This is tax class for tax exempt products.</description>
        </tax-class>

        <tax-class class-id="standard" default="true">
            <display-name>Standard</display-name>
            <description>Standard tax class used if no specific tax class is set for a taxable product or service.</description>
        </tax-class>

        <tax-class class-id="youth">
            <display-name>Youth</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="youth-shoe">
            <display-name>Youth Shoe</display-name>
            <description/>
        </tax-class>

    </tax-classes>
    <tax-jurisdictions>
        <tax-jurisdiction jurisdiction-id="AU" default="true">
            <display-name>Australia</display-name>
            <address-mappings>
                <address-mapping key1="Australia" key2="-"/>
                <address-mapping key1="AU" key2="-"/>
            </address-mappings>
        </tax-jurisdiction>

        <tax-jurisdiction jurisdiction-id="NZ">
            <display-name>New Zealand</display-name>
            <address-mappings>
                <address-mapping key1="New Zealand" key2="-"/>
                <address-mapping key1="NZ" key2="-"/>
            </address-mappings>
        </tax-jurisdiction>

        <tax-jurisdiction jurisdiction-id="default">
            <display-name>Default</display-name>
        </tax-jurisdiction>

    </tax-jurisdictions>
    <tax-rates>
        <tax-rate jurisdiction-id="default" class-id="exempt">0</tax-rate>

        <tax-rate jurisdiction-id="NZ" class-id="exempt">0</tax-rate>

        <tax-rate jurisdiction-id="AU" class-id="exempt">0</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="youth-shoe">0.1</tax-rate>

        <tax-rate jurisdiction-id="NZ" class-id="youth-shoe">0.15</tax-rate>

        <tax-rate jurisdiction-id="AU" class-id="youth-shoe">0.1</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="standard">0.1</tax-rate>

        <tax-rate jurisdiction-id="NZ" class-id="standard">0.15</tax-rate>

        <tax-rate jurisdiction-id="AU" class-id="standard">0.1</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="youth">0.1</tax-rate>

        <tax-rate jurisdiction-id="NZ" class-id="youth">0.15</tax-rate>

        <tax-rate jurisdiction-id="AU" class-id="youth">0.1</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="accessories">0.1</tax-rate>

        <tax-rate jurisdiction-id="NZ" class-id="accessories">0.15</tax-rate>

        <tax-rate jurisdiction-id="AU" class-id="accessories">0.1</tax-rate>

    </tax-rates>
</tax>
