<?xml version="1.0" encoding="UTF-8"?>
<tax xmlns="http://www.demandware.com/xml/impex/tax/2007-02-14">
    <tax-classes>
        <tax-class class-id="accessories">
            <display-name>Accessories</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="exempt">
            <display-name>Exempt</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="standard" default="true">
            <display-name>Standard</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="youth">
            <display-name>Youth</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="youth-shoe">
            <display-name>Youth Shoe</display-name>
            <description>Discounted tax Rate for Poland youth shoe products</description>
        </tax-class>

    </tax-classes>
    <tax-jurisdictions>
        <tax-jurisdiction jurisdiction-id="TH" default="true">
            <display-name/>
            <address-mappings>
                <address-mapping key1="TH" key2="-"/>
                <address-mapping key1="Thailand" key2="-"/>
            </address-mappings>
        </tax-jurisdiction>

        <tax-jurisdiction jurisdiction-id="default">
            <display-name>Default</display-name>
        </tax-jurisdiction>

    </tax-jurisdictions>
    <tax-rates>
        <tax-rate jurisdiction-id="default" class-id="standard">0</tax-rate>

        <tax-rate jurisdiction-id="TH" class-id="standard">0.07</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="exempt">0</tax-rate>

        <tax-rate jurisdiction-id="TH" class-id="exempt">0</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="youth">0</tax-rate>

        <tax-rate jurisdiction-id="TH" class-id="youth">0.07</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="youth-shoe">0</tax-rate>

        <tax-rate jurisdiction-id="TH" class-id="youth-shoe">0.07</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="accessories">0</tax-rate>

        <tax-rate jurisdiction-id="TH" class-id="accessories">0.07</tax-rate>

    </tax-rates>
</tax>
