<?xml version="1.0" encoding="UTF-8"?>
<tax xmlns="http://www.demandware.com/xml/impex/tax/2007-02-14">
    <tax-classes>
        <tax-class class-id="accessories">
            <display-name>Accessories</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="apparel">
            <display-name>Apparel</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="exempt">
            <display-name>Exempt</display-name>
            <description>This is tax class for tax exempt products.</description>
        </tax-class>

        <tax-class class-id="standard" default="true">
            <display-name>Standard</display-name>
            <description>Standard tax class used if no specific tax class is set for a taxable product or service.</description>
        </tax-class>

        <tax-class class-id="youth">
            <display-name>Youth</display-name>
            <description/>
        </tax-class>

        <tax-class class-id="youth-shoe">
            <display-name>Youth Shoe</display-name>
            <description>Discounted tax Rate for Poland youth shoe products</description>
        </tax-class>

    </tax-classes>
    <tax-jurisdictions>
        <tax-jurisdiction jurisdiction-id="GB">
            <display-name>United Kingdom</display-name>
        </tax-jurisdiction>

        <tax-jurisdiction jurisdiction-id="UK">
            <display-name/>
            <address-mappings>
                <address-mapping key1="GB" key2="-"/>
            </address-mappings>
        </tax-jurisdiction>

        <tax-jurisdiction jurisdiction-id="default" default="true">
            <display-name>Default</display-name>
        </tax-jurisdiction>

    </tax-jurisdictions>
    <tax-rates>
        <tax-rate jurisdiction-id="UK" class-id="exempt">0</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="exempt">0</tax-rate>

        <tax-rate jurisdiction-id="GB" class-id="exempt">0</tax-rate>

        <tax-rate jurisdiction-id="UK" class-id="accessories">0.2</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="accessories">0.2</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="apparel">0</tax-rate>

        <tax-rate jurisdiction-id="GB" class-id="apparel">0</tax-rate>

        <tax-rate jurisdiction-id="UK" class-id="youth-shoe">0</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="youth-shoe">0.2</tax-rate>

        <tax-rate jurisdiction-id="GB" class-id="youth-shoe">0</tax-rate>

        <tax-rate jurisdiction-id="UK" class-id="youth">0</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="youth">0.2</tax-rate>

        <tax-rate jurisdiction-id="GB" class-id="youth">0</tax-rate>

        <tax-rate jurisdiction-id="UK" class-id="standard">0.2</tax-rate>

        <tax-rate jurisdiction-id="default" class-id="standard">0.2</tax-rate>

        <tax-rate jurisdiction-id="GB" class-id="standard">0.2</tax-rate>

    </tax-rates>
</tax>
